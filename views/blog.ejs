<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/head') %>
    <title>Home</title>
</head>
<body>
    <%- include("./partials/nav") %>
    <div class="container mt-3">
        <form action="/blog" method="post">
            <div class="form-group mb-3">
              <label for="title">Title</label>
              <input type="text" class="form-control" id="title" aria-describedby="title" placeholder="Enter the title" name="title">
            </div>
            <div class="form-group mb-3">
              <label for="blog_desc">Description</label>
              <input type="text" class="form-control" id="blog_desc" placeholder="Enter the description.." name="desc">
            </div>
            <div class="form-floating mb-3">
              <textarea class="form-control" id="blog" name="blog" rows="1"></textarea>
              <label for="blog">Blog</label>
            </div>          
            <div class="mt-3"><button type="submit" class="btn btn-primary mb-3">Submit</button></div>
          </form>
    </div>
    <%- include("./partials/script") %>
    <script>
        document.getElementById('blog').addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';
        });
    </script>
</body>
</html>
